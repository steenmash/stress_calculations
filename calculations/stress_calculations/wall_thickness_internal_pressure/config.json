{
  "name": "Wall Thickness Under Internal Pressure",
  "description": "Calculate required wall thickness for cylindrical shells per ASME Section VIII / GOST 34233.1 guidance.",
  "version": "1.0.0",
  "inputs": [
    {"id": "diameter", "label": "Inner Diameter (Di)", "unit": "mm", "type": "number", "default": 1000, "min": 10, "max": 10000, "required": true},
    {"id": "pressure", "label": "Design Pressure (P)", "unit": "MPa", "type": "number", "default": 1.0, "min": 0, "max": 25, "required": true},
    {"id": "temperature", "label": "Design Temperature (T)", "unit": "°C", "type": "number", "default": 20, "min": -200, "max": 500, "required": true},
    {"id": "material", "label": "Material", "type": "select", "options": ["Carbon Steel", "Stainless Steel"], "default": "Carbon Steel", "required": true},
    {"id": "grade", "label": "Grade", "type": "select", "options": ["SA-516 Gr.60", "SA-516 Gr.70", "SA-240 TP304", "SA-240 TP316"], "default": "SA-516 Gr.60", "required": true},
    {"id": "corrosionAllowance", "label": "Corrosion Allowance (c)", "unit": "mm", "type": "number", "default": 3, "min": 0, "max": 10},
    {"id": "weldCoefficient", "label": "Weld Joint Efficiency (φ)", "type": "number", "default": 1.0, "min": 0.7, "max": 1.0}
  ],
  "outputs": [
    {"id": "allowableStress", "label": "Allowable Stress [σ]", "unit": "MPa", "precision": 2},
    {"id": "thickness", "label": "Required Thickness (s)", "unit": "mm", "precision": 3},
    {"id": "totalThickness", "label": "Total Thickness (s + c)", "unit": "mm", "precision": 3},
    {"id": "outerDiameter", "label": "Outer Diameter (Do)", "unit": "mm", "precision": 3},
    {"id": "allowablePressure", "label": "Allowable Pressure (P_allow)", "unit": "MPa", "precision": 3},
    {"id": "safetyMargin", "label": "Safety Margin", "unit": "%", "precision": 1}
  ],
  "formulas": ["thickness_formula", "allowable_pressure", "safety_margin"]
}
